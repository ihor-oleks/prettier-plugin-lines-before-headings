{
  "name": "prettier-plugin-lines-before-headings",
  "version": "1.0.3",
  "description": "A Prettier plugin to add blank lines before headings for readability",
  "author": "Ihor Oleksandrov",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "./dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihor-oleks/prettier-plugin-lines-before-headings.git"
  },
  "engines": {
    "node": "~20.12.0",
    "pnpm": "~9.1.0"
  },
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --outdir=dist --platform=node \"--external:prettier\"",
    "clean": "rimraf ./dist/",
    "format": "prettier --cache --write .",
    "lint": "eslint ./src/",
    "prepare": "husky && pnpm clean && pnpm build"
  },
  "devDependencies": {
    "@eslint/js": "~9.4.0",
    "@trivago/prettier-plugin-sort-imports": "~4.3.0",
    "@types/node": "~20.13.0",
    "esbuild": "~0.21.0",
    "eslint": "~9.4.0",
    "globals": "~15.3.0",
    "husky": "~9.0.0",
    "prettier": "~3.3.0",
    "rimraf": "~5.0.0",
    "typescript": "~5.4.0",
    "typescript-eslint": "~7.11.0"
  },
  "peerDependencies": {
    "prettier": "^3"
  },
  "keywords": [
    "prettier",
    "plugin",
    "markdown",
    "blank",
    "lines",
    "before",
    "headings"
  ]
}
